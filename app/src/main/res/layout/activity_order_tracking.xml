<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OrderTrackingActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/order_tracking_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/main_color"
        app:navigationIcon="@drawable/ic_arrow_back"
        app:theme="@style/toolBarTheme"
        app:title="Order Status"
        app:titleTextColor="#fff" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/order_tracking_toolbar"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:id="@+id/order_status_order_placed_textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:drawableLeft="@drawable/ic_check_circle_outline"
            android:drawablePadding="10dp"
            android:gravity="center|left"
            android:text="ORDER PLACED"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/order_status_pending_delivery_textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:drawableLeft="@drawable/ic_check_circle_outline"
            android:drawablePadding="10dp"
            android:gravity="center|left"
            android:text="PENDING DELIVERY"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/order_status_out_for_delivery_textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:drawableLeft="@drawable/ic_check_circle_outline"
            android:drawablePadding="10dp"
            android:gravity="center|left"
            android:text="OUT FOR DELIVERY"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/order_status_delivered_textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:drawableLeft="@drawable/ic_check_circle_outline"
            android:drawablePadding="10dp"
            android:gravity="center|left"
            android:text="DELIVERED"
            android:textSize="25sp" />

    </LinearLayout>

</RelativeLayout>